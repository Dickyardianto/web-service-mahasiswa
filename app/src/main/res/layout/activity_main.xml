<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tfJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Service Data Mahasiswa"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_input_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tfJudul"
        android:text="Tambah Mahasiswa"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/btn_tampil_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tfJudul"
        android:text="Tampil Mahasiswa"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>